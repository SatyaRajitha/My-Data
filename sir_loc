    <div id="map"></div>
    <script>
      //var map = L.map('map');
      var map = L.map('map').setView([12.82905,80.21630], 17);
      L.tileLayer('https://{s}.tiles.mapbox.com/v3/{id}/{z}/{x}/{y}.png', {
      	maxZoom: 18,
      	attribution: 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, ' +
      		'<a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, ' +
      		'Imagery Â© <a href="http://mapbox.com">Mapbox</a>',
      	id: 'examples.map-i875mjb7'
      }).addTo(map);
      
      
                   L.geoJson(Building, {
                     style: function(feature) {
                     switch (feature.properties.Levels) {
                        case 'G+5': return {color: "#ff0000"};
                        case 'G+7': return {color: "#0000ff"};
                        case 'G+4': return {color: "#ff7800"};
                      }
                    }
                 }).addTo(map);;
      
      
                 L.geoJson(Utilities, {
                     style: function(feature) { 
                        return {color:#FFFFFF};
                      }
                    }
                 }).addTo(map);
      
      
                    function onEachFeature(feature, layer) {
                   // does this feature have a property named popupContent?
                    if (feature.properties && feature.properties.popupContent) {
                    layer.bindPopup(feature.properties.popupContent);
                     }
                   }
      
                var polya = {
                             "type": "Feature",
                              "properties": {
                              "Levels":"G+5"
                               "popupContent": "This is a 5 Storey Building!"
                           },
                             "geometry": {
                             "type": "Polygon",
            
                     }
                   };
      
                  L.geoJson(polya , {
                      onEachFeature: onEachFeature
                   }).addTo(map);
      
               var polyb = {
                             "type": "Feature",
                              "properties": {
                              "Levels":"G+7"
                               "popupContent": "This is a 7 Storey Building!"
                           },
                             "geometry": {
                             "type": "Polygon",
            
                     }
                   };
      
